@model AyaPayDemo.Models.Order

@{
    ViewData["Title"] = "Order SUmmary";
}

<h1>Order Summary</h1>

<div>
    <hr />
    <p>We've sent you a payment request to your Aya Pay Mobile Wallet. Please check the notification received and confirm with your PIN to complete the payment.</p>
    <dl class="row">
        <dt class="col-sm-2">
            Order ID:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Product:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            Cost:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            Order Time:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            Order Status:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
